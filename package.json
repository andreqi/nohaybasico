{
  "name": "nohaybasico.com",
  "dependencies": {
    "express": "*",
    "jade": "*",
    "mongoose": "^3.8.19",
    "request": "*",
    "yamljs": "*",
    "immutable": "*",
    "node-jsx": "*",
    "lodash": "*",
    "passport": "*",
    "passport-facebook": "*",
    "browserify": "*",
    "react": "*",
    "reactify": "*"
  },
  "scripts": {
    "build-js": "mkdir -p public && browserify app/app.js --standalone Application --debug --outfile public/bundle.js",
    "build-css": "",
    "build": "npm run build-js && npm run build-css",
    "start": "node app.js",
    "web": "npm run build && npm start",
    "dev": "nodemon --exec \"npm run web\" --ignore public/bundle.js -e js,jsx,css"
  },
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": true
        }
      ]
    ]
  },
  "devDependencies": {
    "chai": "^2.1.1",
    "mocha": "^2.2.1",
    "mocha-mongoose": "^1.0.3",
    "mongodb": "^1.4.34"
  }
}
