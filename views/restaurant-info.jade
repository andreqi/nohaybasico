extends ./restaurant-template.jade

block content
  .container
    .row
        .6u
          .box
            h3.info
              i(class='icon fa-clock-o')
              span Horario de atención
            p L - V   8 - 10
            h3.info
              i(class='icon fa-map-marker')
              span Dirección
            p Jato del fap
            a(class='view-google-maps', href='#{restaurant.mapsURL}' target='_blank')
              Ver en google maps  
            h3.info
              i(class='icon fa-phone')
              span Contacto
            p #{restaurant.contact_msg}
            footer
              ul.social-info
                li
                  a(class="fa fa-facebook")
                    label f
                li
                  a(class="fa fa-twitter")
                    label f
                li
                  a(class="fa fa-google-plus")
                    label f

        .6u
          .box
            img(class='img-responsive', src='/restaurant/map/#{restaurant.homeID}')
