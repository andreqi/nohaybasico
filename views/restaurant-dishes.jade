extends ./restaurant-template.jade

block content
  .container
    .row
      div(class='6u -3u')
        div(class='box dishes-block')
          header
            h3 Platos a la carta
          ul.dishes
            each dishes, key in restaurant.grouped_by_carta
              h4 #{key}
              each dish in dishes
                li(class='block-left-right')
                  span #{dish.name}
                  span.pull-right S/. #{dish.price}                
