extends ./main-template.jade

block title
  #header-wrapper
    #header
      include title
      section#banner
        header
          if !menu_active
            h2 Vuelve pronto 
            p
              | Twitter Bot se encuentra recargando energías.
              br
              | Lo enchufaremos a las 11 am.
          else 
            h2 No hay básico
            p 
              | Twitter Bot sabe que hoy 
              b #{cur_day}
              br
              |  quieres comer 
              b #{dish}
              |  . 
              br
              | Chequea los restaurants que encontramos
              br
              | para ti aquí abajo.
              

block content
  .container
    .row
      .12u
        section
          - var noMenus = restaurants.length == 0

          header.major#menus
            if !menu_active
              h2 Los menús actualizados ya vienen
            else if noMenus
              h2 Twitter Bot no encontró tu plato :(
            else
              h2 Twitter Bot te recomienda estos restaurants
          if !noMenus 
            div(class='row columns')
              each rest in restaurants
                include restaurant
