h1
  a(href='#') #{restaurant.name}

nav#nav
  ul
    - var tabs = []
    - restaurant.fbPreview ? tabs.push(['menu', 'fbPreview']): null;
    - restaurant.dishes ? tabs.push(['menu', 'menu']) : null;  
    - restaurant.carta  ? tabs.push(['carta', 'carta']) : null;
    - tabs.push(['info', 'info']);
    each tab in tabs
      - var tabname = tab[0].charAt(0).toUpperCase() + tab[0].slice(1)
      - var liclass = tab[1] == active_tab ? 'current' : ''; 
      li(class='#{liclass}') 
        a(href='/#{restaurant.tagName}/#{tab[1]}') #{tabname}
